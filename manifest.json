{
    "name": "Alcohol Duty Calculator",
    "description": "Calculate excuse duty on alcohol",
    "version": "1.0.0",
    "author": "luke@glitch.je",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [{ "matches": ["https://www.thedrinksbasket.com/*"], "js": ["thirdparty/jquery-3.6.4.min.js", "scrapers/thedrinksbasket-scraper.js"] }],
    "permissions": ["activeTab", "scripting", "tabs"]
}